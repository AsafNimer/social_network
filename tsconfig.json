{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "lib": ["esnext", "dom", "dom.iterable"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "paths": {
            "components/*": ["./client/src/components/*"]
        }
    },
    "include": ["./client/src", ".webpack/webpack.config.ts", "./client/src/declaration.d.ts"]
}
